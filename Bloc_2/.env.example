# ============================================
# AIRFLOW CONFIGURATION
# ============================================
AIRFLOW_INITIAL_ADMIN_USER=admin
AIRFLOW_INITIAL_ADMIN_PASSWORD=admin

# ============================================
# POSTGRESQL (Amazon Database)
# ============================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=amazon_db
POSTGRES_HOST=amazon_postgres_db
POSTGRES_PORT=5432

# ============================================
# AIRFLOW POSTGRES DATABASE
# ============================================
POSTGRES_USER_AIRFLOW=airflow
POSTGRES_PASSWORD_AIRFLOW=airflow
POSTGRES_DB_AIRFLOW=airflow

# ============================================
# AWS S3 CONFIGURATION
# ============================================
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_REGION=eu-west-3
AWS_S3_BUCKET=your-bucket-name

# ============================================
# MONGODB CONFIGURATION
# ============================================
MONGO_USER=admin
MONGODB_PASSWORD=changeme
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_CONNECTION_STRING=mongodb://admin:changeme@mongodb:27017/

# ============================================
# SNOWFLAKE CONFIGURATION
# ============================================
SNOWFLAKE_USER=your_snowflake_user
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_DB=DB_AMZ
SNOWFLAKE_SCHEMA=REVIEW
SNOWFLAKE_SCHEMA_ANALYTICS=ANALYTICS
SNOWFLAKE_WH=COMPUTE_WH
SNOWFLAKE_ROLE=SYSADMIN

# ============================================
# EMAIL ALERTS CONFIGURATION
# ============================================
# Email recipients for alerts (comma-separated for multiple emails)
ALERT_EMAIL=votre-email@example.com

# SMTP Configuration (required for Airflow email sending)
# For Gmail: Use app password (see setup guide below)
AIRFLOW__SMTP__SMTP_HOST=smtp.gmail.com
AIRFLOW__SMTP__SMTP_STARTTLS=True
AIRFLOW__SMTP__SMTP_SSL=False
AIRFLOW__SMTP__SMTP_PORT=587
AIRFLOW__SMTP__SMTP_MAIL_FROM=airflow@votre-domaine.com
AIRFLOW__SMTP__SMTP_USER=votre-email@gmail.com
AIRFLOW__SMTP__SMTP_PASSWORD=votre-mot-de-passe-app-gmail

